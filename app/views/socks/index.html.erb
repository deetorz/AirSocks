<div class="container my-5">
  <h1>If the sock fits...</h1>
</div>
<% @socks.each do |sock| %>
  <div class="container">
    <div class="card-product mb-3">
    <%= image_tag "#{sock.photo_url}", alt: "#{sock.name}"%>
    <div class="card-product-infos ml-3">
      <h2><%= sock.name.upcase %></h2>
      <p><%= sock.description %></p>

        <%= sock.color %>
        <%= sock.style %>
        <%= sock.price %>

      <%= link_to 'Show', sock, class: 'btn-ghost' %>
    </div>
    </div>
  </div>
<% end %>
