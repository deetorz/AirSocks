<div class="container d-flex mt-5">
  <div class="row">
      <% @socks.each do |sock| %>
        <div class="col">
          <div class="card-product mb-3">
            <%= cl_image_tag sock.photo.attached? ? cl_image_path(sock.photo.key, :crop=>"lfill") : image_path(sock.photo_url) %>
            <div class="card-product-infos text-center">
              <h2><%= link_to sock.name.capitalize, sock %></h2>
              <p><%= sock.description %></p><br>
              <span><strong> Â¥<%= sock.price %></strong></span>
              <div class='mt-5'>
              <span><%= link_to 'Show', sock, class: 'btn-ghost' %></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
  </div>

    <div class="container">
      <div class="sticky">
        <div id="map"
          style="width: 600px; height: 50vh; border-radius: 0 0 30% 0;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>

</div>
